<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/createLog"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="创建日志" />

        <Button
            android:id="@+id/createIMsLog"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="创建 log.i(ims) Tag 日志" />

        <Button
            android:id="@+id/btnUpLogFile"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="日志上传" />


        <Button
            android:id="@+id/btnCheckNewVersion"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="检测新版本" />


        <Button
            android:id="@+id/btnMockCash"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="模拟异常" />

        <Button
            android:id="@+id/btnGetCash"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="获取异常" />

        <Button
            android:id="@+id/btnUpLoadCash"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="上传异常" />


    </LinearLayout>

</ScrollView>